<UserControl x:Class="Revalis.Views.GameFullDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:conv="clr-namespace:Revalis.Converters"
             xmlns:local="clr-namespace:Revalis"
             Background="#1e1e1e">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Orientation="Vertical">

            <!-- Header -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- Cover Image -->
                <Image Grid.Column="0"
                       Source="{Binding Game.CoverImageUrl}"
                       Height="200"
                       Stretch="Uniform"
                       HorizontalAlignment="Left"
                       Margin="0 0 20 0"/>

                <!-- Game Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Game.Name}" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0 0 0 5"/>
                    <TextBlock Text="{Binding Game.Developer}" Foreground="LightGray" Margin="0 0 0 5"/>
                    <TextBlock Text="{Binding Game.Released}" Foreground="LightGray" Margin="0 0 0 5"/>
                    <TextBlock Text="{Binding Game.Rating, StringFormat='Rating: {0}'}" Foreground="Gold"/>
                </StackPanel>

                <!-- Progress + Walkthroughs + Back button -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <Button Content="⬅ Back to Library"
                        Command="{Binding BackToListCommand}"
                        Width="200" Height="30"
                        Background="#444" Foreground="White" Margin="0 0 0 10"/>
                    <TextBlock Text="Completion:" Foreground="LightGray"/>
                    <ProgressBar Value="{Binding Game.CompletionPercent}" Maximum="100" Height="16" Margin="0 0 0 10"/>
                    <ItemsControl ItemsSource="{Binding WalkthroughLinks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Source}"
                                    Tag="{Binding Url}"
                                    Click="WalkthroughButton_Click"
                                    Background="#444" Foreground="White"
                                    FontSize="12" Padding="4" Margin="0 4 0 0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <!-- Achievements + Notes -->
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!-- Achievements -->
                    <ColumnDefinition Width="*"/> <!-- Notes -->
                </Grid.ColumnDefinitions>
                
                <!-- Achievements (Left) -->
                <GroupBox Header="Achievements" Foreground="White" Grid.Column="0" Margin="0 0 10 0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
                        <ItemsControl ItemsSource="{Binding Game.Achievements}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Image Source="{Binding Icon}" Width="32" Height="32"/>
                                        <TextBlock Text="{Binding Name}" Foreground="White" Margin="10 0 0 0"/>
                                        <TextBlock Text="{Binding IsUnlocked, Converter={StaticResource BoolToUnlockedConverter}}"
                                                   Foreground="LightGray" Margin="10 0 0 0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
                
                <!-- Notes (Right) -->
                <GroupBox Header="Notes" Foreground="White" Grid.Column="1" Margin="10 0 0 0">
                    <TextBox Text="{Binding Game.Notes}"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="250"
                             Background="#2a2a2a"
                             Foreground="White"/>
                </GroupBox>
            </Grid>
            
            <!-- In App Browser To Display Walkthrough sites -->
            <GroupBox Header="Browser" Foreground="White" Margin="0 20 0 0">
                <DockPanel LastChildFill="True">
                    
                    <!-- Browser Controls -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
                        <Button Content="◀ Back" Width="75" Margin="0 0 5 0"
                                Click="BrowserBack_Click"
                                Background="#444" Foreground="White"/>
                        <Button Content="▶ Forward" Width="75" Margin="0 0 5 0"
                                Click="BrowserForward_Click"
                                Background="#444" Foreground="White"/>
                        <Button Content="⟳ Refresh" Width="75"
                                Click="BrowserRefresh_Click"
                                Background="#444" Foreground="White"/>
                    </StackPanel>
                    
                    <!-- Embedded Browser -->
                    <wv2:WebView2 x:Name="InAppBrowser" Height="500"/>
                </DockPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>

