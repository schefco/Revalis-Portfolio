<UserControl x:Class="Revalis.Views.GameDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1e1e1e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title and Rating -->
        <Image Source="{Binding SelectedGame.CoverImageUrl}"
               Grid.Row="0"
               Height="250"
               Stretch="UniformToFill"
               Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="{Binding SelectedGame.Name}" 
                       FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="⭐ " FontSize="24" Foreground="Gold"/>
            <TextBlock Text="{Binding SelectedGame.Rating}" 
                       FontSize="20" Foreground="White"/>
        </StackPanel>

        <!-- Developer and Release -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Developer: " Foreground="LightGray"/>
            <TextBlock Text="{Binding SelectedGame.Developer}" 
                       Foreground="White" Margin="5,0"/>
            <TextBlock Text=" | Released: " Foreground="LightGray" Margin="10,0"/>
            <TextBlock Text="{Binding SelectedGame.Released}" Foreground="White"/>
        </StackPanel>

        <!-- Progress + Achievements + Notes -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0 10 0 0">
                <!-- Description -->
                <TextBlock Text="{Binding SelectedGame.Description}"
                           TextWrapping="Wrap"
                           Foreground="White"
                           Margin="0 0 0 10"/>

                <ItemsControl ItemsSource="{Binding SelectedGame.Platforms}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Icon, Converter={StaticResource IconPathConverter}}" Width="24">
                                <Image.ToolTip>
                                    <TextBlock Text="{Binding Name}"/>
                                </Image.ToolTip>
                            </Image>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Full Detail View Button -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0 10 0 10">
            <Button Content="View More"
                    Width="150"
                    Height="35"
                    Background="#444"
                    Foreground="White"
                    Command="{Binding OpenFullDetailCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
